{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Esquema de CIFP",
  "type": "object",
  "properties": {
    "cifp": {
      "type": "object",
      "anyOf": [
        {"required": ["alumne"]},
        {"required": ["professor"]}
      ],
      "properties": {
        "alumne": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "nom", "llinatges", "data_matricula", "curs"],
            "properties": {
              "id": { "type": "integer" },
              "nom": { "type": "string" },
              "llinatges": { "type": "string" },
              "data_naixement": { "type": "string", "format": "date" },
              "correu": { "type": "string", "format": "email" },
              "telefon": { "type": "string" },
              "adreça": { "type": "string" },
              "data_matricula": { "type": "string", "format": "date" },
              "curs": {
                "type": "string",
                "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
              }
            }
          }
        },

        "professor": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "nom", "llinatges", "data_incorporacio", "departament"],
            "properties": {
              "id": { "type": "integer" },
              "nom": { "type": "string" },
              "llinatges": { "type": "string" },
              "data_naixement": { "type": "string", "format": "date" },
              "correu": { "type": "string", "format": "email" },
              "telefon": { "type": "string" },
              "adreça": { "type": "string" },
              "data_incorporacio": { "type": "string", "format": "date" },
              "departament": { 
                "type": "string",
                "enum": ["Informàtica", "Electricitat", "Automoció"] 
              },
              "assignatura": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id_assignatura", "nom_assignatura", "cicle"],
                  "properties": {
                    "id_assignatura": { "type": "integer" },
                    "nom_assignatura": { "type": "string" },
                    "cicle": {
                      "type": "string",
                      "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
                    },
                    "data_inici": { "type": "string", "format": "date" },
                    "data_final": { "type": "string", "format": "date" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
